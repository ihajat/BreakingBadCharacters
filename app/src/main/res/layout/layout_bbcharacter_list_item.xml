<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/universal_padding"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bbccharacter_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_image_height"
            android:padding="@dimen/universal_padding"
            android:maxWidth="@dimen/item_image_width_max"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/walterwhite"/>

        <TextView
            android:id="@+id/bbccharacter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_margin_textview_end"
            tools:text="The name of a Character"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_size_font"
            app:layout_constraintBottom_toBottomOf="@id/bbccharacter_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bbccharacter_image"
            app:layout_constraintTop_toTopOf="@id/bbccharacter_image"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>